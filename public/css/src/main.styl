@import 'functions'
@import 'colors'

*
	-webkit-tap-highlight-color:rgba(0,0,0,0)
	-webkit-user-select: none
body
	font-family : "HelveticaNeue-Lite", Helvetica
	font-weight:200
	overflow-x: hidden;
	background:url('../img/stripes.png') 0 0
	background-size:105%
a
	-webkit-touch-callout: none;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
	
a:hover
	text-decoration:none

[data-role="header"]
	position:relative
	left:0
	right:0
	z-index:1000
	top:-1px
	zoom:1

[data-role="page"]
	position:absolute;
	top:0
	right:0
	bottom:0
	left:0
	overflow-y:scroll
	background-color:transparent
	-webkit-overflow-scrolling: touch
 
/** Page Transitions **/

[data-role="page"]
	&.top
		transform(translate3d(0, -100%, 0))
		&.show
			transform(translate3d(0, 0, 0))
	&.right
		transform(translate3d(100%, 0, 0))
		&.show
			transform(translate3d(0, 0, 0))
	&.bottom
		transform(translate3d(0, 100%, 0))
		&.show
			transform(translate3d(0, 0, 0))
	&.left
		transform(translate3d(-100%, 0, 0))
		&.show
			transform(translate3d(0, 0, 0))
	&.flip
		transform(rotateY(180deg))
		perspective(800)
		backface-visibility(hidden)
		&.show
			transform(rotateY(0))
	&.grow
		transform(scale3d(0,0,0))
		perspective(800)
		backface-visibility(hidden)
		&.show
			transform(scale3d(1,1,1))



